USE SCOTT;
# 1.WAQTD NAME OF THE EMPLOYEES EARNING MORE THAN ADAMS
SELECT SAL FROM EMP WHERE ENAME="ADAMS";
 SELECT ENAME,SAL FROM EMP
 WHERE SAL>
 (SELECT SAL FROM EMP WHERE ENAME="ADAMS");

-- WAQTD NAME AND SALARY OF THE EMPLOYEES EARNING LESS THAN KING -- 
(SELECT SAL FROM EMP WHERE ENAME="KING");
SELECT ENAME, SAL FROM EMP WHERE SAL<
(SELECT SAL FROM EMP WHERE ENAME="KING") ORDER BY SAL;

-- WAQTD NAME AND DEPTNO OF THE EMPLOYEES IF THEY ARE WORKING IN THE SAME DEPT AS JONES -- 
SELECT DEPTNO FROM EMP WHERE ENAME='JONES';
SELECT ENAME, DEPTNO FROM EMP WHERE DEPTNO=
(SELECT DEPTNO FROM EMP WHERE ENAME='JONES');

-- 4.WAQTD NAME AND JOB OF ALL THE EMPLOYEES WORKING IN THE SAME DESIGNATION AS JAMES--
SELECT JOB FROM EMP WHERE ENAME="JAMES"; 
SELECT ENAME, JOB FROM EMP WHERE JOB=
(SELECT JOB FROM EMP WHERE ENAME="JAMES");

USE SCOTT;
# 5.WAQTD EMPNO AND ENAME ALONG WITH ANNUAL SALARY OF ALL THE EMPLOYEES IF THEIR ANNUAL SALARY IS GREATER THAN WARD'S ANNUAL SALARY
SELECT SAL*12 FROM EMP WHERE ENAME="WARD"; 
SELECT EMPNO, ENAME, (SAL*12)ANNUAL_SAL FROM EMP WHERE (SAL*12)>
(SELECT SAL*12 FROM EMP WHERE ENAME="WARD") ORDER BY 3;

-- 6.WAQTD NAME AND HIREDATE OF THE EMPLOYEES IF THEY ARE HIRED BEFORE TURNER-- 
SELECT HIREDATE FROM EMP WHERE ENAME="TURNER";
SELECT ENAME, HIREDATE FROM EMP WHERE HIREDATE<
(SELECT HIREDATE FROM EMP WHERE ENAME="TURNER") ORDER BY HIREDATE;


-- 7.WAQTD NAME AND HIREDATE OF THE EMPLOYEES IF THEY ARE HIRED AFTER THE PRESIDENT-- 
SELECT HIREDATE FROM EMP WHERE JOB="PRESIDENT";
SELECT ENAME, HIREDATE FROM EMP WHERE HIREDATE>
(SELECT HIREDATE FROM EMP WHERE JOB="PRESIDENT") ORDER BY HIREDATE;

-- 8.WAQTD NAME AND SAL OF THE EMPLOYEE IF THEY ARE EARNING SAL LESS THAN THE EMPLOYEE  WHOS EMPNO IS 7839-- 
 SELECT SAL FROM EMP WHERE EMPNO=7839;
 SELECT ENAME, SAL FROM EMP WHERE SAL<
 (SELECT SAL FROM EMP WHERE EMPNO=7839) ORDER BY SAL DESC;
 
 -- 9.WAQTD ALL THE DETAILS OF THE EMPLOYEES IF THE EMPLOYEES ARE HIRED BEFORE MILLER
 SELECT HIREDATE FROM EMP WHERE ENAME="MILLER";
 SELECT * FROM EMP WHERE HIREDATE <
 (SELECT HIREDATE FROM EMP WHERE ENAME="MILLER") ORDER BY HIREDATE;

-- 10.WAQTD ENAME AND EMPNO OF THE EMPLOYEES IF EMPLOYEES ARE EARNING MORE THAN ALLEN
SELECT SAL FROM EMP WHERE ENAME="ALLEN";
SELECT ENAME, EMPNO FROM EMP WHERE SAL>
(SELECT SAL FROM EMP WHERE ENAME="ALLEN") ORDER BY SAL; 

-- 11.WAQTD NUMBER OF EMPLOYEES HIRED AFTER KING 
SELECT HIREDATE FROM EMP WHERE ENAME="KING";
SELECT COUNT(*)NO_EMP FROM EMP WHERE HIREDATE>
(SELECT HIREDATE FROM EMP WHERE ENAME="KING"); 

-- 12.WAQTD TOTAL SALARY GIVEN TO THE EMPLOYEES WORKING IN THE SAME DEPT AS WARD  
select DEPTNO FROM EMP WHERE ENAME="WARD";
SELECT SUM(SAL) FROM EMP WHERE DEPTNO=
(SELECT DEPTNO FROM EMP WHERE ENAME="WARD");
SELECT SAL FROM EMP WHERE DEPTNO=30; 

-- 11.WAQTD ENAME AND SALARY OF ALL THE EMPLOYEES WHO ARE EARNING MORE THAN MILLER BUT LESS THAN ALLEN
SELECT SAL FROM EMP WHERE ENAME="MILLER";
SELECT SAL FROM EMP WHERE ENAME= "ALLEN"; 
SELECT ENAME, SAL FROM EMP WHERE SAL BETWEEN 
(SELECT SAL FROM EMP WHERE ENAME="MILLER") 
AND (SELECT SAL FROM EMP WHERE ENAME= "ALLEN");

SELECT ENAME,SAL
FROM EMP
WHERE SAL>(SELECT SAL
FROM EMP
WHERE ENAME='MILLER') AND SAL<(sELECT SAL
FROM EMP
WHERE ENAME='ALLEN');
 
--  12.WAQTD ALL THE DETAILS OF THE EMPLOYEES WORKING IN DEPT 20 AND WORKING IN THE SAME DESIGNATION AS SMITH
SELECT * FROM EMP WHERE DEPTNO=20  AND 
JOB=(SELECT JOB FROM EMP WHERE ENAME="SMITH");
 
 --  13.WAQTD ALL THE DETAILS OF THE EMPLOYEES WORKING AS MANAGER IN THE SAME DEPT AS TURNER 
SELECT * FROM EMP WHERE JOB="MANAGER" AND
DEPTNO=( SELECT DEPTNO FROM EMP WHERE ENAME="TURNER");

-- 14.WAQTD NAME AND HIREDATE OF THE EMPLOYEES HIRED AFTER 1980 AND BEFORE KING 
SELECT ENAME, HIREDATE FROM EMP WHERE YEAR(HIREDATE)>1980
 AND HIREDATE<
(SELECT HIREDATE FROM EMP WHERE ENAME="KING");

SELECT ENAME,HIREDATE
FROM EMP
WHERE HIREDATE>'1980-12-31' AND HIREDATE<(SELECT HIREDATE
FROM EMP
WHERE ENAME='KING');
 
 -- 15.WAQTD NAME AND SAL ALONG WITH ANNUAL SAL FOR ALL EMPLOYEES WHOS SAL IS LESS THAN BLAKE OR EMP'S EARNING MORE THAN MORE THAN 3500

SELECT ENAME, SAL, (SAL*12)ANNUAL_SALARY FROM EMP  WHERE 
SAL<(SELECT SAL FROM EMP WHERE ENAME="BLAKE")  OR (SAL>3500); 

-- 16.WAQTD ALL THE DETAILS OF EMPLOYEES WHO EARN MORE THAN SCOTT BUT LESS THAN KING 
(SELECT SAL FROM EMP WHERE ENAME="SCOTT");
SELECT SAL FROM EMP WHERE ENAME="KING";
 SELECT * FROM EMP WHERE SAL>
 (SELECT SAL FROM EMP WHERE ENAME="SCOTT") AND
 SAL<( SELECT SAL FROM EMP WHERE ENAME="KING");
 
 #  17.WAQTD NAME OF THE EMPLOYEES WHOS NAME STARTS WITH  A  AND WORKS IN THE SAME DEPT AS BLAKE 

SELECT ENAME FROM EMP WHERE ENAME LIKE "A%" AND 
DEPTNO=(SELECT DEPTNO FROM EMP WHERE ENAME="BLAKE");


-- 18.WAQTD NAME AND COMM IF EMPLOYEES EARN COMISSION AND WORK IN THE SAME  DESIGNATION AS ALLEN 
SELECT * FROM EMP;
(SELECT JOB
FROM EMP
WHERE ENAME='ALLEN');
SELECT ENAME , COMM FROM EMP WHERE 
COMM IS NOT NULL
AND JOB=(SELECT JOB FROM EMP WHERE ENAME="ALLEN");

#  19.WAQTD DETAILS OF ALL THE EMPLOYEES WORKING AS CLERK IN THE SAME DEPT AS TURNER
SELECT DEPTNO FROM EMP WHERE ENAME="TURNER";
SELECT * FROM EMP WHERE JOB="CLERK" AND
DEPTNO=(SELECT DEPTNO FROM EMP WHERE ENAME="TURNER");

-- WAQTD ENAME, SAL AND DESIGNATION OF THE EMPLOYEES WHOS ANNUAL SALARY IS MORE THAN SMITH AND LESS THAN KING
SELECT ENAME,SAL, JOB FROM EMP WHERE (SAL*12)>
(SELECT SAL*12 FROM EMP WHERE ENAME="SMITH" ) AND SAL*12<(
SELECT SAL*12 FROM EMP WHERE ENAME="KING");



