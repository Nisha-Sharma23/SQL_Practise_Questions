 SELECT * FROM DEPT;
 -- .WAQTD NAME AND SAL OF THE EMPLOYEES EARNING MORE THAN SCOTT IN THE DEPT ACCOUNTING 
 SELECT ENAME ,SAL FROM EMP WHERE SAL>(SELECT SAL FROM EMP WHERE ENAME="SCOTT" ) 
 AND DEPTNO=(SELECT DEPTNO FROM DEPT WHERE DNAME="ACCOUNTING");
 
 --  WAQTD DETAILS OF THE EMPLOYEES WORKING AS SALESMAN IN THE DEPARTEMENT SALES 
 SELECT * FROM EMP WHERE JOB="SALESMAN" AND
 DEPTNO=(SELECT DEPTNO FROM DEPT WHERE DNAME="SALES");
 
 --  WAQTD NAME , SAL , JOB , HIREDATE OF THE EMPLOYEES WORKING IN RESEARCH DEPARTMENT AND HIRED BEFORE KING
 SELECT ENAME,SAL,JOB,HIREDATE FROM EMP WHERE HIREDATE<(SELECT HIREDATE FROM EMP WHERE ENAME="KING") AND
 DEPTNO=(SELECT DEPTNO FROM DEPT WHERE DNAME="RESEARCH");
 
 -- DISPLAY ALL THE EMPLOYEES WHOSE DEPARTMET NAMES ENDING 'S'.
 
 SELECT ENAME FROM EMP WHERE DEPTNO IN 
 (SELECT DEPTNO FROM DEPT WHERE DNAME LIKE "%S");
 
 -- .WAQTD DNAME OF THE EMPLOYEES WHOS NAMES HAS CHARACTER  A  IN IT 
 SELECT DNAME FROM DEPT WHERE DEPTNO =
 (SELECT DEPTNO FROM EMP WHERE ENAME LIKE "%A%" AND JOB="IT");
 
 -- WAQTD DNAME AND LOC OF THE EMPLOYEES WHOS SALARY IS RUPEES 800 .
SELECT DNAME,
LOC FROM DEPT WHERE DEPTNO=(SELECT DEPTNO FROM EMP WHERE SAL=800); 

-- .WAQTD DNAME OF THE EMPLOYEES WHO EARN COMISSION 
SELECT DNAME FROM DEPT WHERE DEPTNO IN (SELECT DEPTNO FROM EMP WHERE COMM IS NOT NULL);

--  WAQTD LOC OF THE EMPLOYEES IF THEY EARN COMISSION IN DEPT 30 
SELECT LOC FROM DEPT WHERE DEPTNO IN (SELECT DEPTNO FROM EMP WHERE COMM IS NOT NULL AND DEPTNO=30);

-- 41.WAQTD NAME OF THE EMPLOYEE EARNING MAXIMUM SALARY
SELECT ENAME, SAL FROM EMP ORDER BY SAL DESC LIMIT 1; 
SELECT ENAME, SAL FROM EMP WHERE 
SAL=(SELECT MAX(SAL) FROM EMP);

--  WAQTD NAME OF THE EMPLOYEE EARNING MINIMUM SALARY 
SELECT  ENAME, SAL FROM EMP  ORDER BY SAL ASC LIMIT 1;
SELECT ENAME , SAL FROM EMP WHERE SAL=( SELECT MIN(SAL) FROM EMP );

--  .WAQTD NAME AND HIREDATE OF THE EMPLOYEE HIRED BEFORE ALL THE EMPLOYEES 
SELECT ENAME, HIREDATE FROM EMP ORDER BY HIREDATE LIMIT 1;
SELECT ENAME, HIREDATE FROM EMP WHERE 
HIREDATE=(SELECT MIN(HIREDATE) FROM EMP);

--  WAQTD NAME AND HIREDATE OF THE EMPLOYEES HIRED AT THE LAST
SELECT ENAME, HIREDATE FROM EMP ORDER BY HIREDATE DESC LIMIT 1;
SELECT ENAME, HIREDATE FROM EMP 
WHERE HIREDATE =( SELECT MAX(HIREDATE) FROM EMP);

-- WAQTD NAME, COMM OF THE EMPLOYEE WHO EARNS MIN COMISSION 
SELECT ENAME, COMM FROM EMP
 WHERE COMM=( SELECT MIN(COMM) FROM EMP);
 
 --  WAQTD NAME, SAL AND COMM OF THE EMPLOYEE EARNING MAXIMUM COMISSION 
 SELECT ENAME, SAL, COMM FROM EMP 
 WHERE COMM =( SELECT MAX(COMM) FROM EMP);
 
 -- WAQTD DETAILS OF THE EMPLOYEE WHO HAS GREATEST EMPNO
 SELECT * FROM EMP WHERE EMPNO=(SELECT MAX(EMPNO) FROM EMP);
 
 --  .WAQTD DETAILS OF THE EMPLOYEES HAVING THE LEAST HIREDATE
 SELECT * FROM EMP WHERE HIREDATE=( SELECT MIN(HIREDATE) FROM EMP);
 
 -- WAQTD DETAILS OF THE EMPLOYEES EARNING LEAST ANNUAL SALARY
 
 SELECT *, SAL*12 FROM EMP WHERE (SAL*12)=(SELECT MIN(SAL*12) FROM EMP);
 
 -- WAQTD NAME , ANNUAL SALARY OF THE EMPLOYEES IF THEIR ANNUAL SALARY IS MORE THAN ALL THE SALESMAN
 SELECT ENAME,(SAL*12)ANUUAL_SAL,JOB FROM EMP WHERE SAL*12 >(SELECT MAX(SAL*12) FROM EMP WHERE JOB="SALESMAN");
 SELECT (SAL*12) FROM EMP WHERE JOB="SALESMAN";
 SELECT MAX(SAL*12) FROM EMP WHERE JOB="SALESMAN";
